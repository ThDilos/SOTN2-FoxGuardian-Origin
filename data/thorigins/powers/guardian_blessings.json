{
	"type": "origins:multiple",
	"name": "§a§nGuardian Blessings",
	"description": "You received blessings from a few guardians.",
	"badges": [
		{
			"type": "origins:tooltip",
			"sprite": "origins:textures/gui/badge/star.png",
			"text": [
				{
					"translate": "Blessing of Yepi:\n%s\n",
					"color": "blue",
					"with": [
						{
							"text": "Immune to Freezing."
						}
					]
				},
				{
					"translate": "Blessing of Aetlyena:\n%s\n",
					"color": "aqua",
					"with": [
						{
							"text": "Able to climb in Powdered Snow."
						}
					]
				},
				{
					"text": "=-=-=-=-=-=-=-=-=-=-=-=-=-=",
					"color": "white"
				},
				{
					"translate": "\nBlessing of the Ram:\n%s\n",
					"color": "yellow",
					"with": [
						{
							"text": "Take 25%* less damage from all sources."
						}
					]
				},
				{
					"translate": "Blessing of the Stag:\n%s\n",
					"color": "dark_green",
					"with": [
						{
							"text": "Gain 25%* more healing from all sources."
						}
					]
				},
				{
					"translate": "Blessing of the Raven:\n%s\n",
					"color": "dark_purple",
					"with": [
						{
							"text": "Gain 25%* more experience."
						}
					]
				},
				{
					"translate": "Blessing of the Wolf:\n%s\n",
					"color": "gray",
					"with": [
						{
							"text": "Higher chance to tame wolves successfully."
						}
					]
				},
				{
					"translate": "Blessing of the Bear:\n%s\n",
					"color": "dark_gray",
					"with": [
						{
							"text": "Deal 25%* more damage."
						}
					]
				},
				{
					"translate": "Blessing of the Shaman:\n%s",
					"color": "dark_red",
					"with": [
						{
							"text": "Gratitude."
						}
					]
				},
				{
					"text": "\n\nBlessings with * symbol can be further increased by slaying Ender Dragon (2.5% More per stack, maximum 20 stacks)",
					"color": "dark_gray"
				}
			]
		}
	],

	"yepi_blessing": {
		"type": "origins:modify_damage_taken",
		"damage_condition": {
			"type": "origins:name",
			"name": "freeze"
		},
		"modifier": {
			"value": 0,
			"operation": "set_total"
		}
	},

	"aetlyena_blessing": {
		"type": "origins:climbing",
		"allow_holding": true,
		"condition": {
			"type": "origins:block_collision",
			"block_condition": {
				"type": "origins:block",
				"block": "minecraft:powder_snow"
			}
		},
		"hold_condition": {
			"type": "origins:sneaking"
		}
	},

	"count_dragon_kill": {
		"type": "origins:self_action_on_kill",
		"target_condition": {
			"type": "origins:entity_type",
			"entity_type": "minecraft:ender_dragon"
		},
		"entity_action": {
			"type": "origins:and",
			"actions": [
				{
					"type": "origins:change_resource",
					"resource": "*:*_dragon_slayed",
					"change": 1
				},
				{
					"type": "origins:execute_command",
					"command": "/scoreboard objectives add tempObj dummy"
				},
				{
					"type": "origins:execute_command",
					"command": "/execute store result score @s tempObj run resource get @s thorigins:guardian_blessings_dragon_slayed"
				},
				{
					"type": "origins:execute_command",
					"command": "/tellraw @s {\"translate\":\"Your Guardian Blessings grew stronger! (%s/20)\",\"with\":[{\"score\":{\"name\":\"*\",\"objective\":\"tempObj\"}}],\"color\":\"aqua\"}"
				},
				{
					"type": "origins:execute_command",
					"command": "/scoreboard objectives remove tempObj"
				}
			]
		}
	},

	"dragon_slayed": {
		"type": "origins:resource",
		"min": 0,
		"max": 20,
		"start_value": 0,
		"max_action": {
			"type": "origins:execute_command",
			"command": "/tellraw @s {\"text\":\"You have reached maximum blessing stack possible!\",\"color\":\"gold\"}"
		}
	},

	"ram_blessing": {
		"type": "origins:modify_damage_taken",
		"modifier": {
			"value": -0.25,
			"operation": "multiply_total",
			"modifier": {
				"operation": "addition",
				"value": -0.025,
				"modifier": {
					"operation": "multiply_total",
					"resource": "*:*_dragon_slayed",
